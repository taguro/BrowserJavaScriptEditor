#javascript
function doScript(val){

var rval=val.split("").reverse().join("");

var val2=rval.split(/\r?\n/g).sort().join("\r");

val2=val2.split("").reverse().join("");

val2=val2.split("\r").reverse().join("\r");

document.getElementById('result').value =val;
}

#HTML
<textarea id="result">result</textarea>

